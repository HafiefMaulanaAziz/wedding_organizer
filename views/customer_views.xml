<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- res.partner inherit form view -->
    <record id="inherit_res_partner_form" model="ir.ui.view">
        <field name="name">res.partner.inherit.view.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <!-- Add your xpath here -->
            <field name="vat" position="after">
                <field name="is_staff"/>
                <field name="is_customer"/>
            </field>
        </field>
    </record>

    <!-- res.partner inherit search view -->
    <record id="res_partner_inherit_search" model="ir.ui.view">
        <field name="name">res.partner.inherit.view.search</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">
            <!-- Add your xpath here -->
            <field name="parent_id" position="after">
                <filter name="staff" string="Staff" domain="[('is_staff', '=', 'True')]"/>
                <filter name="customer" string="Customer" domain="[('is_customer', '=', 'True')]"/>
            </field>
        </field>
    </record>

    <!-- res.partner action window -->
    <record id="wedding_customer_action" model="ir.actions.act_window">
        <field name="name">Customer</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="context">{
            'search_default_customer':1,
            'defualt_is_customer':True,
        }
        </field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="wedding_contact_customer_menu_act" 
    name="Customer" 
    parent="wedding_partner_menu_categ" 
    action="wedding_customer_action" 
    sequence="20"/>

</odoo>
