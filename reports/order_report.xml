<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_wedding_order">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h1>Faktur Order</h1>
                        <h2>
                        <div class="row">
                            <div class="col-4">Kode Order  :</div>
                            <div class="col-8"><span t-field="o.name"/></div>
                        </div>
                        <div class="row">
                            <div class="col-4">Nama        :</div>
                            <div class="col-8"><span t-field="o.customer_id"/></div>
                        </div>
                        </h2>
                        <h3>
                        <div class="row">
                            <table class="table-bordered">
                                    <tr>
                                        <th>Jenis Kursi</th>
                                        <th>Quantity</th>
                                    </tr>
                            <t t-foreach="o.orderguestchairdetail_ids" t-as="k">
                                    <tr>
                                        <td><span t-esc="k.guestchair_id.name"/></td>
                                        <td><span t-esc="k.qty"/></td>
                                    </tr>                          
                                
                            </t>
                            </table>
                        </div>
                        </h3>
                    </div>
                </t>
            </t>
        </t>
    </template>

</odoo>
